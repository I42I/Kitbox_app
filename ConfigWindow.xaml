<Window x:Class="Kitbox.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration de l'Armoire" Height="500" Width="800">
    <Grid Background="#F0F0F0">

        <!-- Retour au menu -->
        <Button Content="← Menu" Width="80" Height="30"
                Background="Transparent" Foreground="Black"
                FontSize="14" FontWeight="Bold"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="10"
                Click="BackToMenu_Click"/>

        <StackPanel VerticalAlignment="Top" Margin="20">

            <!-- Sélection du Nombre de Casiers -->
            <TextBlock Text="Nombre de casiers :" FontSize="16" Margin="0,10"/>
            <ComboBox x:Name="LockerCount" Width="100" SelectionChanged="LockerCount_Changed">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="7"/>
            </ComboBox>

            <!-- Carrousel des casiers -->
            <Border BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="0,20">
                <StackPanel Orientation="Horizontal">

                    <!-- Bouton Précédent -->
                    <Button Content="◄" Width="40" Height="100"
                            Click="PreviousLocker_Click"/>

                    <!-- Affichage du Casier Actuel -->
                    <StackPanel Width="600">
                        <TextBlock x:Name="LockerTitle" Text="Casier 1" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <TextBlock Text="Hauteur :" FontSize="14"/>
                            <ComboBox x:Name="HeightInput" Width="60" SelectionChanged="HeightInput_SelectionChanged">
                                <ComboBoxItem Content="32"/>
                                <ComboBoxItem Content="42"/>
                                <ComboBoxItem Content="52"/>
                            </ComboBox>

                            <TextBlock Text=" Largeur :" FontSize="14" Margin="10,0,0,0"/>
                            <ComboBox x:Name="WidthInput" Width="60">
                                <ComboBoxItem Content="32"/>
                                <ComboBoxItem Content="42"/>
                                <ComboBoxItem Content="52"/>
                                <ComboBoxItem Content="62"/>
                                <ComboBoxItem Content="80"/>
                                <ComboBoxItem Content="100"/>
                                <ComboBoxItem Content="120"/>
                            </ComboBox>

                            <TextBlock Text=" Profondeur :" FontSize="14" Margin="10,0,0,0"/>
                            <ComboBox x:Name="DepthInput" Width="60">
                                <ComboBoxItem Content="32"/>
                                <ComboBoxItem Content="42"/>
                                <ComboBoxItem Content="52"/>
                                <ComboBoxItem Content="62"/>
                            </ComboBox>
                        </StackPanel>


                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <TextBlock Text="Couleur :" FontSize="14"/>
                            <ComboBox x:Name="ColorInput" Width="120">
                                <ComboBoxItem Content="Blanc"/>
                                <ComboBoxItem Content="Noir"/>
                                <ComboBoxItem Content="Bois"/>
                            </ComboBox>
                        </StackPanel>

                        <CheckBox x:Name="HasDoors" Content="Ajouter des portes" Margin="0,10"/>

                    </StackPanel>

                    <!-- Bouton Suivant -->
                    <Button Content="►" Width="40" Height="100"
                            Click="NextLocker_Click"/>
                </StackPanel>
            </Border>

            <!-- Bouton de validation -->
            <Button Content="Ajouter au Panier" Width="200" Height="40"
                    Background="SteelBlue" Foreground="White"
                    Click="AddToCart_Click"/>
        </StackPanel>
    </Grid>
</Window>

