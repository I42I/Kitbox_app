<Window x:Class="Kitbox_app.OrdersManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kitbox_app"
        mc:Ignorable="d"
        Title="OrdersManagementWindow" Height="450" Width="800">
    <Grid Background="#F0F0F0">

        <!-- Bouton Retour en Haut à Droite -->
        <Button Content="← Retour" Width="80" Height="30"
                Background="Transparent" Foreground="Black"
                FontSize="14" FontWeight="Bold"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="10"
                Click="BackToManager_Click"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Gestion des Commandes" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <ListBox x:Name="OrdersList" Width="400" Height="200"/>

            <Button Content="🔄 Rafraîchir" Width="200" Height="40"
                    Background="SteelBlue" Foreground="White"
                    Click="RefreshOrders_Click" Margin="0,20"/>
        </StackPanel>

    </Grid>
</Window>
