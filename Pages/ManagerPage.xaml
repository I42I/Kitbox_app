<Page x:Class="Kitbox_app.ManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Manager">
    <Grid Background="#F0F0F0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Tableau de Bord - Manager" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <Button Content="Gérer les Commandes" Width="200" Height="40" Margin="0,10"
                    Background="DarkSlateBlue" Foreground="White" Click="ManageOrders_Click"/>

            <Button Content="Gérer le Stock" Width="200" Height="40" Margin="0,10"
                    Background="DarkSlateBlue" Foreground="White" Click="ManageStock_Click"/>

            <Button Content="Gérer les Fournisseurs" Width="200" Height="40" Margin="0,10"
                    Background="DarkSlateBlue" Foreground="White" Click="ManageSuppliers_Click"/>

            <Button Content="Déconnexion" Width="200" Height="40" Margin="0,20"
                    Background="DarkRed" Foreground="White" Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</Page>
