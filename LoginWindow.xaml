<Window x:Class="KitBox.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KitBox"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Background="#F0F0F0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Titre -->
            <TextBlock Text="Connexion" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Champ Nom d'utilisateur -->
            <TextBlock Text="Nom d'utilisateur" FontSize="16"/>
            <TextBox x:Name="UsernameInput" Width="200" Margin="0,5"/>

            <!-- Champ Mot de Passe -->
            <TextBlock Text="Mot de passe" FontSize="16"/>
            <PasswordBox x:Name="PasswordInput" Width="200" Margin="0,5"/>

            <!-- Bouton Connexion -->
            <Button Content="Se connecter" Width="200" Height="40"
                    Background="SteelBlue" Foreground="White" 
                    Click="LoginButton_Click"
                    Margin="0,20"/>

        </StackPanel>

        <Grid>
            <Button Content="← Menu" Width="80" Height="30"
            Background="Transparent" Foreground="Black"
            FontSize="14" FontWeight="Bold"
            HorizontalAlignment="Right" VerticalAlignment="Top"
            Margin="10"
            Click="BackToMenu_Click"/>
        </Grid>
    </Grid>
</Window>
