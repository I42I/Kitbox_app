<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:KitBoxDesigner.ViewModels"
             xmlns:views="using:KitBoxDesigner.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="KitBoxDesigner.Views.StockManagementView"
             x:DataType="vm:StockManagementViewModel">

    <Design.DataContext>
        <vm:StockManagementViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        <!-- Tab Header -->
        <Border Grid.Row="0" 
                Background="#f8f9fa"
                BorderBrush="#dee2e6"
                BorderThickness="0,0,0,1"
                Padding="20,15">
              <StackPanel Orientation="Horizontal" Spacing="10">
                <!-- Inventory Tab (now shows stock checker) -->
                <Button Classes="tab-button"
                        Content="ðŸ“¦ Inventaire"
                        Command="{Binding SelectTabCommand}"
                        CommandParameter="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="15,8"
                        Margin="0,0,5,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="#6c757d"
                        CornerRadius="5"/>
            </StackPanel>
        </Border>

        <!-- Tab Content -->
        <Border Grid.Row="1" 
                Background="White"
                Padding="20">
            
            <!-- Simple Content Display -->
            <ContentPresenter Content="{Binding CurrentTabContent}"/>
        </Border>
    </Grid>
</UserControl>
