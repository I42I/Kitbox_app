<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:KitBoxDesigner.ViewModels"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="800"
             x:Class="KitBoxDesigner.Views.OrderCompletionView"
             x:DataType="vm:OrderCompletionViewModel">

    <Design.DataContext>
        <vm:OrderCompletionViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Margin="30" Spacing="25">
            <!-- Header -->
            <Border Background="#f8f9fa" 
                    CornerRadius="8" 
                    Padding="20">
                <StackPanel Spacing="10">
                    <TextBlock Text="🎉 Finalisation de votre commande"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#28a745"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Veuillez remplir vos informations pour finaliser la commande"
                               FontSize="14"
                               Foreground="#6c757d"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Configuration Summary -->
            <Border Background="White"
                    BorderBrush="#dee2e6"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="15">
                    <TextBlock Text="📋 Résumé de votre armoire"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#495057"/>
                    
                    <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto">                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Dimensions:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="0" Grid.Column="1">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}cm x {1}cm x {2}cm">
                                    <Binding Path="Configuration.Width"/>
                                    <Binding Path="Configuration.Height"/>
                                    <Binding Path="Configuration.Depth"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Largeur:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Configuration.Width, StringFormat='{}{0} cm'}"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Hauteur:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Configuration.Height, StringFormat='{}{0} cm'}"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Profondeur:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Configuration.Depth, StringFormat='{}{0} cm'}"/>
                          <TextBlock Grid.Row="4" Grid.Column="0" Text="Compartiments:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Configuration.Compartments.Count, StringFormat='{}{0} compartiments'}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Price Summary -->
            <Border Background="#e8f5e8"
                    BorderBrush="#28a745"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="20"
                    IsVisible="{Binding PriceBreakdown, Converter={x:Static ObjectConverters.IsNotNull}}">
                <StackPanel Spacing="10">
                    <TextBlock Text="💰 Prix Total"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#28a745"/>
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0" Text="Prix total:" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="{Binding PriceBreakdown.TotalPrice, StringFormat='C'}" 
                                   FontSize="20" FontWeight="Bold" Foreground="#28a745"/>
                    </Grid>
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0" Text="Dépôt suggéré (30%):" FontSize="14"/>
                        <TextBlock Grid.Column="1" Text="{Binding SuggestedDeposit, StringFormat='C'}" 
                                   FontSize="14" Foreground="#007bff"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Customer Information Form -->
            <Border Background="White"
                    BorderBrush="#dee2e6"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="20">
                    <TextBlock Text="👤 Informations client"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#495057"/>                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
                        <Grid.Styles>
                            <Style Selector="Grid > TextBlock">
                                <Setter Property="Margin" Value="8,8,8,8"/>
                            </Style>
                        </Grid.Styles>
                        
                        <!-- Name -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Nom complet *" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                 Text="{Binding CustomerInfo.Name}"
                                 Watermark="Entrez votre nom complet"
                                 BorderBrush="#ced4da"
                                 Padding="10,8"/>

                        <!-- Email -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Email *" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                 Text="{Binding CustomerInfo.Email}"
                                 Watermark="exemple@email.com"
                                 BorderBrush="#ced4da"
                                 Padding="10,8"/>

                        <!-- Phone -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Téléphone *" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="5" Grid.Column="0"
                                 Text="{Binding CustomerInfo.Phone}"
                                 Watermark="+33 1 23 45 67 89"
                                 BorderBrush="#ced4da"
                                 Padding="10,8"/>

                        <!-- Deposit Amount -->
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="Montant du dépôt (€)" FontWeight="SemiBold"/>
                        <NumericUpDown Grid.Row="5" Grid.Column="1"
                                       Value="{Binding CustomerInfo.DepositAmount}"
                                       Minimum="0"
                                       Maximum="999999"
                                       FormatString="C"
                                       BorderBrush="#ced4da"
                                       Padding="10,8"/>

                        <!-- Address -->
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Adresse complète *" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                                 Text="{Binding CustomerInfo.Address}"
                                 Watermark="Adresse, ville, code postal"
                                 Height="80"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 BorderBrush="#ced4da"
                                 Padding="10,8"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Notes -->
            <Border Background="White"
                    BorderBrush="#dee2e6"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="10">
                    <TextBlock Text="📝 Notes supplémentaires (optionnel)"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#495057"/>
                    
                    <TextBox Text="{Binding CustomerInfo.Notes}"
                             Watermark="Ajoutez des notes ou des instructions spéciales..."
                             Height="80"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             BorderBrush="#ced4da"
                             Padding="10,8"/>
                </StackPanel>
            </Border>

            <!-- Status Message -->
            <Border Background="#fff3cd"
                    BorderBrush="#ffeeba"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="15"
                    IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                <TextBlock Text="{Binding StatusMessage}"
                           FontSize="14"
                           Foreground="#856404"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Spacing="15">
                
                <Button Content="❌ Annuler"
                        Command="{Binding CancelCommand}"
                        Background="#dc3545"
                        Foreground="White"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        CornerRadius="5"
                        IsEnabled="{Binding !IsProcessing}"/>

                <Button Content="💰 Recalculer le prix"
                        Command="{Binding CalculatePriceCommand}"
                        Background="#17a2b8"
                        Foreground="White"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        CornerRadius="5"
                        IsEnabled="{Binding !IsProcessing}"/>

                <Button Content="✅ Finaliser la commande"
                        Command="{Binding CompleteOrderCommand}"
                        Background="#28a745"
                        Foreground="White"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        CornerRadius="5"
                        IsEnabled="{Binding !IsProcessing}"/>
            </StackPanel>

            <!-- Loading Indicator -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Spacing="10"
                        IsVisible="{Binding IsProcessing}">
                <TextBlock Text="⏳ Traitement en cours..." 
                           FontSize="14" 
                           Foreground="#6c757d"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
