<Window x:Class="KitBox.SupplierManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KitBox"
        mc:Ignorable="d"
        Title="SupplierManagementWindow" Height="478" Width="831">
    <Grid Background="#F0F0F0">

        <!-- Back to Manager Menu Button -->
        <Button Content="← Retour" Width="80" Height="30"
                Background="Transparent" Foreground="Black"
                FontSize="14" FontWeight="Bold"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="10"
                Click="BackToManager_Click"/>

        <StackPanel Margin="20">
            <!-- Title -->
            <TextBlock Text="Gestion des Fournisseurs" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Supplier List -->
            <ListBox x:Name="SupplierList" Height="200" Width="600" Margin="0,10"/>

            <!-- Supplier Input Fields -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Nom : " FontSize="16" VerticalAlignment="Center"/>
                <TextBox x:Name="SupplierNameInput" Width="150" Margin="5,0"/>
                <TextBlock Text="Prix : " FontSize="16" VerticalAlignment="Center"/>
                <TextBox x:Name="SupplierPriceInput" Width="80" Margin="5,0"/>
                <TextBlock Text="Délai (jours) : " FontSize="16" VerticalAlignment="Center"/>
                <TextBox x:Name="SupplierDelayInput" Width="50" Margin="5,0"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Ajouter" Width="120" Height="35" Background="Green" Foreground="White"
                        Click="AddSupplier_Click" Margin="5"/>
                <Button Content="Modifier" Width="120" Height="35" Background="Orange" Foreground="White"
                        Click="EditSupplier_Click" Margin="5"/>
                <Button Content="Supprimer" Width="120" Height="35" Background="Red" Foreground="White"
                        Click="DeleteSupplier_Click" Margin="5"/>
            </StackPanel>

            <Button Content="Rafraîchir" Width="200" Height="35" Background="DarkSlateBlue" Foreground="White"
                    Click="RefreshSuppliers_Click" Margin="10,0,0,10"/>

        </StackPanel>
    </Grid>
</Window>
