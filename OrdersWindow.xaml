<Window x:Class="Kitbox_app.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kitbox_app"
        mc:Ignorable="d"
        Title="OrdersWindow" Height="450" Width="800">
    <Grid Background="#F0F0F0">
        <StackPanel Margin="20">
            <TextBlock Text="Mes Commandes" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <ListBox x:Name="OrdersList" Height="200"/>
            <Button Content="Rafraîchir" Click="RefreshOrders_Click" Margin="0,20"/>
        </StackPanel>

        <Grid>
            <Button Content="← Menu" Width="80" Height="30"
            Background="Transparent" Foreground="Black"
            FontSize="14" FontWeight="Bold"
            HorizontalAlignment="Right" VerticalAlignment="Top"
            Margin="10"
            Click="BackToMenu_Click"/>
        </Grid>

    </Grid>
</Window>
