<Page x:Class="Kitbox_app.Pages.StockManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Kitbox_app.Pages"
      mc:Ignorable="d"
      Title="Gestion du Stock">
    <Grid Background="#F0F0F0">

        <Button Content="← Retour" Width="80" Height="30"
                Background="Transparent" Foreground="Black"
                FontSize="14" FontWeight="Bold"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="10"
                Click="BackToManager_Click"/>

        <StackPanel Margin="20">
            <TextBlock Text="Gestion du Stock" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="Rafraîchir le Stock" Click="RefreshStock_Click" Margin="0,20"/>
        </StackPanel>
    </Grid>
</Page>
