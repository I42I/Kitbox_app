<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="https://github.com/avaloniaui"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Kitbox_avalonia.Views.ConfigView">
  <StackPanel Margin="20" Spacing="10">

    <TextBlock Text="Créer une armoire" FontSize="24" HorizontalAlignment="Center"/>

    <TextBlock Text="Sélectionner un casier :" />
    <ComboBox Name="LockerSelector"
              Items="{Binding AvailableLockers}"
              SelectedItem="{Binding SelectedLocker}" />

    <Button Content="Ajouter le casier" Command="{Binding AddLockerCommand}" />

    <TextBlock Text="Casier(s) ajouté(s) :" Margin="0,10,0,0" />
    <ListBox Name="AddedLockersList"
             Items="{Binding AddedLockers}"
             Height="150" />

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="0,20,0,0">
      <Button Content="Valider" Command="{Binding ValidateCommand}" />
      <Button Content="Retour" Command="{Binding BackCommand}" />
    </StackPanel>

  </StackPanel>
</UserControl>
