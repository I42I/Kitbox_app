<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Kitbox_avalonia.ViewModels"
             mc:Ignorable="d"
             x:Class="Kitbox_avalonia.Views.HomeView"
             x:DataType="vm:HomeViewModel">
    <Grid Background="#F0F0F0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to Kitbox"
                      FontSize="24" FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <Button Content="CrÃ©er une armoire"
                    Width="200" Height="50"
                    Background="SteelBlue" Foreground="White"
                    Command="{Binding CreateCabinetCommand}"
                    Margin="0,10"/>

            <Button Content="Voir mes commandes"
                    Width="200" Height="50"
                    Background="DarkSlateBlue" Foreground="White"
                    Command="{Binding ViewOrdersCommand}"
                    Margin="0,10"/>

            <Button Content="Se connecter"
                    Width="200" Height="50"
                    Background="DarkGray" Foreground="White"
                    Command="{Binding LoginCommand}"
                    Margin="0,10"/>
        </StackPanel>
    </Grid>
</UserControl>