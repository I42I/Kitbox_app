<Window x:Class="Kitbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kitbox - Home" Height="400" Width="600">
    <Grid Background="#F0F0F0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Titre -->
            <TextBlock Text="Welcome to Kitbox"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Bouton Créer une armoire -->
            <Button Content="Créer une armoire"
                    Width="200" Height="50"
                    Background="SteelBlue" Foreground="White"
                    Click="BtnCreateCabinet_Click"
                    Margin="0,10"/>

            <!-- Bouton Voir mes commandes -->
            <Button Content="Voir mes commandes"
                    Width="200" Height="50"
                    Background="DarkSlateBlue" Foreground="White"
                    Click="BtnViewOrders_Click"
                    Margin="0,10"/>

            <!-- Bouton Se connecter -->
            <Button Content="Se connecter"
                    Width="200" Height="50"
                    Background="DarkGray" Foreground="White"
                    Click="BtnLogin_Click"
                    Margin="0,10"/>

        </StackPanel>
    </Grid>
</Window>
